<li id="nanopost-<%= nanopost.id %>">
  <%= avatar_for nanopost.user %>
  <span class="user"><%= link_to nanopost.user.name, nanopost.user %></span>
  <span class="content">
    <%= nanopost.content %>
    <%= image_tag nanopost.display_image if nanopost.image.attached? %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(nanopost.created_at) %> ago.
    <% if current_user?(nanopost.user) %>
        <%= link_to "delete", nanopost, method: :delete, data: { confirm: "You sure?" } %>
    <% end %>
    <!-- INSERT LIKES HERE -->
  </span>
</li>